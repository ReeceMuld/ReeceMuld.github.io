

<h3>Register</h3>

<div class="mb-3">
    <input type="text" @bind-value="@Username" class="form-control" placeholder="Username" />
</div>
<div class="mb-3">
    <input type="text" @bind-value="@Email" class="form-control" placeholder="Email" />
</div>
<div class="mb-3">
    <input type="text" @bind-value="@Password" class="form-control" placeholder="Password" />
</div>
<div class="mb-3">
    <input type="text" @bind-value="@ConfirmedPassword" class="form-control" placeholder="Confirm Password" />
</div>
<div class="mb-3">
    <input type="date" @bind-value="@date" class="form-control" placeholder="Date of Birth" />
</div>
<Button Color="ButtonColor.Primary" Size="ButtonSize.Large" Disabled="false" @onclick="Register">Register</Button>
<br />
@output

@code {
    public string Username;
    public string Email;
    public string Password;
    public string ConfirmedPassword;
    public DateTime date = DateTime.Now.AddYears(-23);
    public string output = "";

    private void Register()
    {
        output = "You are registered";
    }
}
