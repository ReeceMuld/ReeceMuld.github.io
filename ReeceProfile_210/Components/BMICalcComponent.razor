<h3>Body Mass Index Calculator</h3>

<div class="mb-3">
    <label class="form-label">Centimeters</label>
    <NumberInput TValue="int" @bind-Value="@CM" Placeholder="Enter Feet" />
    <br />
    <label class="form-label">Kilograms</label>
    <NumberInput TValue="int" @bind-Value="@KG" Placeholder="Enter Weight in pounds" />
    <br />
    <label class="form-label">Age</label>
    <NumberInput TValue="int" @bind-Value="@Age" Placeholder="Age" />
</div>
<Button Class="btn btn-success" @onclick="() => CalculateBMI(CM, KG, Age)">Calculate BMI</Button> 
<Button Class="btn btn-success" @onclick="Swap">@gender.ToString()</Button> @BMI
<br />
<br />
<br />
