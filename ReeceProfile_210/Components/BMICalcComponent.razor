<br />

@code {
    public int CM;
    public int KG;
    public int Age;
    public decimal BMI;
    public decimal GenderDiff;
    public enum Gender {Man, Woman};
    Gender gender;

    private void CalculateBMI(int height, int weight, int age)
    {
        if(gender == Gender.Man)
        {
            GenderDiff = 5m;
            BMI = (weight * 10m) + (height * 6.25m) - (age * 5m) + GenderDiff; 
        } else
        {
            GenderDiff = -161m;
            BMI = (weight * 10m) + (height * 6.25m) - (age * 5m) + GenderDiff;
        }

    }

    private void Swap()
    {
        if(gender == Gender.Man)
        {
            gender = Gender.Woman;
        } else if (gender == Gender.Woman)
        {
            gender = Gender.Man;
        } else
        {
            gender = Gender.Man;
        }

        
    }
}
